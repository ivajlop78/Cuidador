<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="60dp"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilDniV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="60dp">
                <EditText
                    android:id="@+id/DniV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/nom"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:ems="10"
                    android:hint="@string/dni_pacient"
                    android:maxLength="9"
                    android:inputType="text"
                    android:textColor="#00175C"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:textSize="16sp" >
                    <requestFocus />
                </EditText>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilCognomsV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TilNomV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/CognomsV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp"
                    android:ems="10"
                    android:hint="@string/cognoms_p"
                    android:inputType="text"
                    android:textColor="#00175C"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TilCognomsV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/Data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:ems="10"
                    android:maxLength="16"
                    android:hint="@string/data"
                    android:inputType="text|datetime"
                    android:textColor="#00175C"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TilData"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/Hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:ems="10"
                    android:maxLength="16"
                    android:hint="@string/hora"
                    android:inputType="text|datetime"
                    android:textColor="#00175C"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilNomV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TilDniV"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/NomV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/cognoms"
                    android:layout_marginLeft="150dp"
                    android:layout_marginStart="150dp"
                    android:ems="10"
                    android:hint="@string/nom_p"
                    android:inputType="text"
                    android:textColor="#00175C"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:textSize="16sp" >
                </TextView>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btAltaP"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/selector"
                android:drawablePadding="0dp"
                android:text="@string/bt_Alta"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp"
                android:layout_below="@+id/TilHora"
                android:layout_marginTop="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/btCancelarP"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/selector"
                android:drawablePadding="0dp"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@+id/TilHora"
                android:layout_alignTop="@+id/btAltaP"
                android:layout_toRightOf="@+id/btAltaP"
                android:layout_toEndOf="@+id/btAltaP"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp" />

            <ImageButton
                android:id="@+id/btDni"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/selector_img_lupa"
                android:scaleType="fitXY"
                android:background="@drawable/selector_img_lupa"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_alignTop="@+id/TilDniV"
                android:layout_toRightOf="@+id/btCancelarP"
                android:layout_toEndOf="@+id/btCancelarP" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Nombre"
            android:textColor="#00175C"
            android:textColorHint="#00175C"
            android:textColorLink="#00175C"
            android:labelFor="@+id/nom"
            android:layout_above="@+id/TilCognomsV"
            android:layout_alignLeft="@+id/btAltaP"
            android:layout_alignStart="@+id/btAltaP"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
                android:id="@+id/textView"
                android:layout_alignTop="@+id/TilNomV" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Apellidos"
                android:textColor="#00175C"
                android:textColorHint="#00175C"
                android:textColorLink="#00175C"
                android:labelFor="@+id/CognomsV"
                android:layout_alignTop="@+id/TilCognomsV"
                android:layout_alignRight="@+id/textView"
                android:layout_alignEnd="@+id/textView" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>