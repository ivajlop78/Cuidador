<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="60dp"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilNom"
                android:layout_below="@+id/TilRePass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/nom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="#00175C"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:hint="@string/nom_p"
                    android:textSize="16sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                   >
                </EditText>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilCognoms"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/TilNom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <EditText
                    android:id="@+id/cognoms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/cognoms_p"
                    android:inputType="text"
                    android:textColor="#00175C"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:textSize="16sp" >
                </EditText>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilEmpresa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/TilCognoms"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <EditText
                    android:id="@+id/empresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/cognoms"
                    android:layout_below="@+id/cognoms"
                    android:ems="10"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:hint="@string/empresa_c"
                    android:inputType="text"
                    android:textColor="#00175C"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:textSize="16sp" >
                </EditText>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilUsuari"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilPass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/TilUsuari"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/password_c"
                    android:inputType="textPassword"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:textColor="#00175C"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:textSize="16sp" >
                    <requestFocus/>
                </EditText>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TilRePass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/TilPass"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/rePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/repassword_c"
                    android:inputType="textPassword"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:textColor="#00175C"
                    android:textColorHint="#00175C"
                    android:textColorLink="#00175C"
                    android:textSize="16sp" >
                </EditText>
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btModifP"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/selector"
                android:drawablePadding="5dp"
                android:text="@string/bt_Modif"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/TilEmpresa"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:id="@+id/btCancelarP"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/selector"
                android:drawablePadding="0dp"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_alignTop="@+id/btModifP"
                android:layout_toRightOf="@+id/btModifP"
                android:layout_toEndOf="@+id/btModifP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Usuario:"
                android:textColor="#00175C"
                android:textColorHint="#00175C"
                android:textColorLink="#00175C"
                android:labelFor="@+id/usuari"

                android:layout_alignTop="@+id/TilUsuari"
                android:layout_toLeftOf="@+id/btCancelarP"
                android:layout_toStartOf="@+id/btCancelarP" />

            <TextView
                android:id="@+id/usuari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/usuari_c"
                android:inputType="text"
                android:labelFor="@+id/usuari"
                android:textColor="#00175C"
                android:textColorHint="#00175C"
                android:textColorLink="#00175C"
                android:textSize="16sp"
                android:layout_alignTop="@+id/TilUsuari"
                android:layout_toRightOf="@+id/btModifP"
                android:layout_toEndOf="@+id/btModifP">
            </TextView>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>